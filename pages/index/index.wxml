<view class="container">
  <view class="section">
    <view class="section-item">
      <view class="section-tips">
        <label>账户</label>
      </view>
      <view class="section-input">
        <input placeholder="请输入手机号码" bindinput="usernameInput"></input>
      </view>
    </view>
    <view class="section-item">
      <view class="section-tips">
        <label>密码</label>
      </view>
      <view class="section-input">
        <input placeholder="请输入密码" bindinput="passwordInput" password="true"></input>
      </view>
    </view>

    <view class="section-item">
      <view class="section-tips">
        <label>验证码</label>
      </view>
      <view class="section-input1">
        <input placeholder="请输入验证码" bindinput="authcodeInput" password="true"></input>
      </view>
      <button class="section-code" disabled="{{isClick}}"  bindtap="gainAuthCodeAction">
       <text>{{time}}</text>
      </button>
    </view>

    <view class="wjmm">
       <view class="wjmma" type="primary" bindtap='wjmma'>忘记密码？</view>
       <view class="ccmm"  type="primary" bindtap='ccmm'>注册</view>
    </view>
  </view>

  <view>
    <button class="section-btn"  bindtap="loginBtnClick">登陆 </button>
  </view>
</view>